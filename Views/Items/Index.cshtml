@model List<TheatreApp.Models.Item>
@using Microsoft.AspNetCore.Http

@{
    var isLoggedIn = User.Identity?.IsAuthenticated ?? false;
}

<h2 class="text-2xl font-bold mb-4">Available Booking Items</h2>


    <form asp-action="Logout" method="post" class="mb-4">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>

    <button onclick="document.getElementById('addForm').style.display='block'" class="btn btn-success mb-3">+ Add Item</button>

    <form id="addForm" asp-action="Add" method="post" style="display:none;" class="mb-6">
        <div>
            <input name="Name" placeholder="Item Name" class="form-control mb-2" required />
            <input name="Description" placeholder="Description" class="form-control mb-2" required />
            <input name="Price" placeholder="Price" type="number" step="0.01" class="form-control mb-2" required />
            <input name="ImageUrl" placeholder="Image URL" class="form-control mb-2" required />
            <button type="submit" class="btn btn-primary">Add Item</button>
        </div>
    </form>


<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        <div class="border rounded p-4 shadow-md">
            <img src="@item.ImageUrl" alt="@item.Name" class="w-full h-48 object-cover mb-3" />
            <h3 class="text-xl font-semibold">@item.Name</h3>
            <p>@item.Description</p>
            <p class="text-green-600 font-bold mt-2">$@item.Price</p>
        </div>
    }
</div>